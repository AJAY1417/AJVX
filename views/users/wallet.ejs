<%- include('../layouts/user/header.ejs') %>

<main class="main">
    <div class="page-header text-center" style="background-image: url('')">
        <div class="container">
            <h1 class="page-title text-white"><i class="fa-thin fa-wallet"></i> My Wallet</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Wallet</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <h2>Your Wallet Balance:<br>â‚¹ <%= wallet.wallet ? wallet.wallet.toFixed(2) : '0.00' %></h2>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/wallet-history"><button class="btn rounded" style="background-color: rgb(81, 86, 238); color: white;">Transaction History</button></a>
                        <button class="btn btn-success rounded float-right" data-bs-toggle="modal" data-bs-target="#form">Add Wallet</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <a href="/shop"><button class="btn rounded" style="margin-bottom: 12px; background-color: rgb(81, 86, 238); color: white;">Continue Shopping</button></a>
        </div>
    </div>

    <!-- Wallet Add Modal -->
    <div class="modal fade" id="form" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="margin-top: 154px;">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Add amount to wallet</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="wallet-form">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="email1">Enter Amount</label>
                                <input type="number" class="form-control" id="amount" aria-describedby="emailHelp" placeholder="e.g. 1000">
                                <p id="err" class="text-danger"></p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn rounded" style="background-color: grey;" data-bs-dismiss="modal">CANCEL</button>
                            <button type="submit" class="btn rounded" style="background-color: rgb(0, 104, 179);">ADD</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    const err = document.getElementById('err');
    document.getElementById('wallet-form').addEventListener('submit', (e) => {
        e.preventDefault();

        const amount = document.getElementById('amount').value.trim();
        if (!amount) {
            console.log('No amount entered');
            return; // Exit early if amount is empty
        }
        if (amount < 0) {
            console.log('Amount is negative');
            err.innerText = 'Amount cannot be negative!';
            return; // Exit early if amount is negative
        }

        $.ajax({
            url: '/add-wallet',
            method: 'post',
            data: { amount },
            success: (res) => {
                if (res.status) {
                    console.log('Opening Razorpay', res.payment);
                    razorpay(res.payment);
                } else {
                    console.log('Failed to retrieve payment details');
                }
            },
            error: (xhr, status, error) => {
                console.error('Error:', error);
            }
        });
    });

    function razorpay(order) {
        var options = {
            key: "rzp_test_Rr5LK4XJjm8rxm", // Replace with your actual Razorpay key
            amount: order.amount, // Convert amount to paise
            currency: "INR",
            name: "AJVX",
            description: "Test Transaction",
            image: "/public/user/assets/images/demos/demo-5/logo.png",
            order_id: order.id,
            handler: function (response) {
                verifyPayment(response, order);
            },
            prefill: {
                name: "AJVX",
                email: "ajvxstore@example.com",
                contact: "9778019889",
            },
            notes: {
                address: "Razorpay Corporate Office",
            },
            theme: {
                color: "#c96",
            },
        };

        var rzp1 = new Razorpay(options);
        rzp1.open();
    }

    function verifyPayment(payment, order) {
        $.ajax({
            url: '/verifyWalletpayment',
            method: 'post',
            data: {
                payment,
                order
            },
            success: (res) => {
                if (res.status) {
                    location.href = '/view-wallet';
                } else {
                    console.log('Payment verification failed');
                    alert('Payment Failed');
                }
            },
            error: (xhr, status, error) => {
                console.error('Error:', error);
                alert('Payment Failed');
            }
        });
    }
</script>


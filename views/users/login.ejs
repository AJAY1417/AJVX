<!-- views/users/login.ejs -->

<%- include('../layouts/user/header.ejs') %>
<main class="main">
  <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <!-- Breadcrumb HTML content -->
  </nav>

  <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
    style="background-image: url('/assets/images/backgrounds/login-bg.jpg')">
    <div class="container">
      <div class="form-box">
        <div class="form-tab">
          <ul class="nav nav-pills nav-fill" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab"
                aria-controls="signin-2" aria-selected="true">Sign In</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
              <form action="/login" method="POST" onsubmit="return validateForm()">
                <div class="form-group">
                  <label for="singin-email-2">Username or email address *</label>
                  <input type="text" class="form-control" id="singin-email-2" name="email" required>
                  <p id="emailError" class="error-message"></p>
                </div><!-- End .form-group -->

                <div class="form-group">
                  <label for="singin-password-2">Password *</label>
                  <input type="password" class="form-control" id="singin-password-2" name="password" required>
                  <p id="passwordError" class="error-message"></p>
                </div><!-- End .form-group -->

                <div class="form-footer d-flex justify-content-between align-items-center">
                  <div>
                    <button type="submit" class="btn btn-outline-primary-2">
                      <span>LOG IN</span>
                      <i class="icon-long-arrow-right"></i>
                    </button>
                  </div>
                  <div>
                    <a href="#" class="forgot-link">Forgot Your Password?</a>
                  </div>
                </div><!-- End .form-footer -->

                <div class="form-choice mt-3">
                  <div class="d-flex justify-content-start">
                    <p class="mb-0">Not a member yet? <a href="/register" class="btn-link">Sign up</a></p>
                  </div>
                </div><!-- End .form-choice -->
                

                <% if (typeof message !=='undefined' ) { %>
                <p id="flashMessage" style="color: red; text-align: center; font-weight: bold; font-size: 20px;">
                  <%= message %>
                </p>
                <script>
                  // Set timeout to hide the message after 5000 milliseconds (5 seconds)
                  setTimeout(function () {
                    var flashMessage = document.getElementById('flashMessage');
                    if (flashMessage) {
                      flashMessage.style.display = 'none';
                    }
                  }, 5000);
                </script>
                <% } %>
              </form>
            </div><!-- .End .tab-pane -->

            <!-- Other tabs or content -->

          </div><!-- End .tab-content -->
        </div><!-- End .form-tab -->
      </div><!-- End .form-box -->
    </div><!-- End .container -->
  </div><!-- End .login-page section-bg -->
</main><!-- End .main -->

<%- include('../layouts/user/footer.ejs') %>

<script>
  function validateForm() {
    var email = document.getElementById("singin-email-2").value;
    var password = document.getElementById("singin-password-2").value;

    // Reset previous error messages
    document.getElementById("emailError").innerHTML = "";
    document.getElementById("passwordError").innerHTML = "";

    // Check individual fields and display error messages
    if (email.trim() === "") {
      document.getElementById("emailError").innerHTML = "Please enter your email.";
      return false;
    }

    if (password.trim() === "") {
      document.getElementById("passwordError").innerHTML = "Please enter your password.";
      return false;
    }

    // You can add more validation logic here for other fields if needed

    return true;
  }
</script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Success Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
        integrity="sha512-r0DPLgO1f6TPhISGRqWzw7c0QI6OSZYOaM/Zs5sw+07IccIZoK4y1P2hLBCvjnnN7zUXK+k2E08t6QFmSbJcDQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Include Lottie Player library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.11/lottie.min.js"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <style>
        .player-container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        lottie-player {
            width: 300px;
            height: 300px;
        }

        .success-message {
            font-size: 1.25rem;
            color: #2D3748;
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .order-text {
            color: #718096;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="flex justify-center items-center h-screen">
        <div class="bg-white p-8 rounded-md shadow-md max-w-md">
            <!-- Lottie Animation -->
            <div class="mb-6 mx-auto player-container">
                <lottie-player src="https://lottie.host/afa054af-389e-4fe0-a5f4-85a699550ac1/AO2GPgFu0g.json"
                    background="#FFFFFF" speed="1" loop autoplay direction="1" mode="normal"></lottie-player>
            </div>
            <!-- Success Message -->
            <div class="text-center">
                <h3 class="success-message">Order Placed Successfully!</h3>
                <p class="order-text">Thank you for shopping with us. Your order has been successfully placed.</p>
                <p class="order-text">Have a great day!</p>
                <!-- Go to Orders Button -->
                <div class="text-center">
                    <a id="go-to-orders-button" href="#" class="px-6 py-2 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-md inline-block">GO TO ORDERS</a>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    // Wait for the DOM to be ready
    document.addEventListener("DOMContentLoaded", function () {
        // Find the "GO TO ORDERS" button
        var goToOrdersButton = document.querySelector("#go-to-orders-button");

        // Add click event listener to the button
        goToOrdersButton.addEventListener("click", function (event) {
            // Prevent default behavior of the link
            event.preventDefault();

            // Trigger click event on the "Orders" tab link
            var ordersTabLink = document.querySelector("#tab-orders-link");
            if (ordersTabLink) {
                ordersTabLink.click();
            }
        });
    });
</script>
</html>
